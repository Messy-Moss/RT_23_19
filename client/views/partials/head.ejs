    <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;900&display=swap');
    
    body{
      max-width: 1200px;
      margin: 20px auto;
      padding: 0 20px;
      font-family: 'Roboto', sans-serif;
      max-width: 1200px;
    }
    p, h1, h2, h3, a, ul{
      margin: 0;
      padding: 0;
      text-decoration: none;
      color: #222;
    }
    /* nav & footer styles */
    nav{
      display: flex;
      justify-content: space-between;
      margin-bottom: 60px;
      padding-bottom: 10px;
      border-bottom: 1px solid #ddd;
      text-transform: uppercase;
      position: relative;
    }
    .search-form {
      margin-left: 32px;
      position: absolute;
      right: 0;
      top: 0;
    }
    nav ul{
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }
    nav li{
      list-style-type: none;
      margin-left: 20px;
    }
    nav h1{
      font-size: 3em;
    }
    nav p, nav a{
      color: #777;
      font-weight: 300;
    }
    a {
      cursor: pointer;
    }
    a:hover {
      color: #000;
    }
    footer{
      color: #777;
      text-align: center;
      margin: 80px auto 20px;
    }
    h2{
      margin-bottom: 40px;
      font-size: 42px;
      font-weight: 400;
    }
    h3{
      text-transform: capitalize;
    }
    .content{
      margin-left: 20px;
    }
    .create-oglas form{
      max-width: 400px;
      margin: 0 auto;
    }
    .create-oglas input,
    .create-oglas textarea{
      display: block;
      width: 100%;
      margin: 10px 0;
      padding: 8px;
    }
    .create-oglas label{
      display: block;
      margin-top: 24px;
    }
    textarea{
      height: 120px;
      resize: none;
    }
    .create-oglas button{
      margin-top: 20px;
      background: rgb(255, 5, 5);
      color: white;
      padding: 6px 12px 6px 12px;
      border: 0;
      font-size: 1.2em;
      border-radius: 3px;
      cursor: pointer;
    }
    .box {
        border-left: 10px solid #333;
        padding-left: 20px;
        /* padding-top: 10px; */
        padding-bottom: 10px;
        margin-top: 15px;
        background-color: #fff;
        transition: all 0.3s;
    }
    .box:hover {
      cursor: pointer;
      background-color: #ddd;
    }

    .cena {
      color: #333;
      margin-top: 30px;
      font-weight: 900;
    }
    .title {
      font-size: 26px;
      font-weight: 400;
    }
    .box-top {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .tags {
      margin-left: 15px;
      border: 1px solid #000;
      padding: 3px 5px 3px 5px;
      border-radius: 3px;
      background-color: rgb(3, 165, 3);
      color: #fff;
    }

    .proizvod-dodat {
      color: rgb(4, 103, 4); background-color: lime;
      font-size: 24px;
      width: 350px;
      margin: 0 auto;
      text-align: center;
      margin-top: 20px;
      margin-bottom: 20px;
      padding: 5px 15px;
    }

    .contact {
      margin-top: 24px;
      margin-bottom: 24px;
    }

    .description {
      margin-bottom: 24px;
    }

    .header {
      display: flex;
      justify-content: space-between;
    }

    .delete-btn {
      margin-top: 20px;
      background: rgb(255, 5, 5);
      color: white;
      padding: 6px 12px 6px 12px;
      border: 0;
      font-size: 1.2em;
      border-radius: 3px;
      cursor: pointer;
      margin-top: 48px;
    }

    </style>
