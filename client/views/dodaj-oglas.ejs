<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <h1 class="title" style="display: flex; justify-content: center;"><%= title %></h1>

    <% if (message) { %>
        <h2 class="proizvod-dodat">Uspesno postavljen proizvod</h2>
    <% } %>

    <div class="create-oglas form">
        <form method="POST" action="/dodaj-oglas">
            <div class="form-item">
                <label for="kategorija">Kategorija oglasa</label>
                <input type="text" id="kategorija" name="kategorija">
            </div>
            <div class="form-item">
                <label for="datum">Datum Isteka</label>
                <input type="date" id="datum" name="datumIsteka">
            </div>
            <div class="form-item">
                <label for="cena">Cena</label>
                <input type="number" id="cena" name="iznos">
                <select name="valuta" id="valuta">
                    <option value="din">din</option>
                    <option value="eur">eur</option>
                    <option value="usd">usd</option>
                </select>
            </div>
            <div class="form-item">
                <label for="opis">Opis</label>
                <textarea name="opis" id="opis" cols="30" rows="10" placeholder="Opis oglasa" ></textarea>
            </div>
            <div class="form-item">
                <label for="oznake">Oznake (odvojiti zarezom)</label>
                <input type="text" name="oznake" id="oznake">
            </div>
            <div class="form-item">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email">
            </div>
            <button>Submit</button>
        </form>
    </div>
</body>
</html>